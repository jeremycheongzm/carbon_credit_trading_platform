datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Request {
  id            Int    @id @default(autoincrement())
  companyName   String
  carbonQuantity Int
  carbonPrice   Float
  requestReason String
  requestType   String
  createdAt     DateTime @default(now())
}
